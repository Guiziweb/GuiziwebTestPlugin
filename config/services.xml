<?xml version="1.0" encoding="UTF-8" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**" />
    </imports>

    <services>
        <service id="Guiziweb\SyliusTestPlugin\Controller\GreetingController" autowire="true" autoconfigure="true" public="true" />
        <service id="Guiziweb\SyliusTestPlugin\Form\Type\BookType" autoconfigure="true" autowire="true">
            <tag name="form.type" />
        </service>
        <service id="Guiziweb\SyliusTestPlugin\Grid\BookGrid" autoconfigure="true" autowire="true">
            <tag name="sylius.grid" />
        </service>
        <service id="Guiziweb\SyliusTestPlugin\Menu\AdminMenuListener" autoconfigure="true" autowire="true">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="addAdminMenuItems" />
        </service>
    </services>
</container>